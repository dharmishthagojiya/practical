<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   
    <record id="property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <tree default_order="id" decoration-success="state == 'offer_received'" decoration-muted ="state == 'sold'" decoration-primary="state == 'offer_accepted'"  decoration-danger="state == 'cancelled'" >
                <field name="id"/>
                <field name="name"/> 
                <field name="postcode"/>
                <field name="buyer_id"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hidden"/> 
                <field name="property_type_id"/>
                <field name="state"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </tree>
        </field>
    </record>
    <record id="property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <form string="Test">
                 <header>
                    <button id="button_new" name="action_new" string="New" class="btn-primary" states="cancelled" type="object"/>
                    <button id="button_received" name="action_received" string="Received" class="btn-primary" states="new" type="object"/>
                    <button id="button_accepted" name="action_accepted" string="Accept" class="btn-primary" states="offer_received" type="object"/>
                    <button id="button_sold" name="action_sold" string="Sell" class="btn-primary" states="offer_received,offer_accepted" type="object"/>
                    <button id="button_cancel" name="action_cancel" string="Cancel" class="btn-primary" states="new,offer_received,offer_accepted" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                   
                    <group>
                        <group>
                            <h1><b><field name="name" placeholder="Title"/></b></h1>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="buyer_id"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>

                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" attrs="{'invisible':[('garden','=',False)]}"/>
                                    <field name="garden_orientation" attrs="{'invisible':[('garden','=',False)]}"/>

                                    <field name="total_area"/>
                                    
                                </group>
                            </page>
                             <page string="Offers">
                                    <field name="offer_ids" attrs="{'readonly': [('state', 'in', ('offer_accepted','sold','cancelled'))]}">
                                </field>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="seller_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
           <search string="properties">
               <field name="name"/>
               <field name="postcode"/>
               <field name="expected_price"/>
               <field name="bedrooms"/>
               <field name="living_area"/>
               <field name="facades"/>
               <separator/>
               
           </search>
        </field>
    </record>
<record id="test_kanban_view" model="ir.ui.view">
    <field name="name">estate.property.kanban</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <kanban string="properties">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li><b>
                                        <field name="name"/>
                                    </b></li>
                                    <li><b>
                                        <field name="postcode"/>
                                    </b></li>
                                    <li><b>
                                        <field name="bedrooms"/>
                                    </b></li>
                                    <li><b>
                                        <field name="living_area"/>
                                    </b></li>
                                    <li><b>
                                        <field name="expected_price"/>
                                    </b></li>
                                    <li><b>
                                        <field name="selling_price"/>
                                    </b></li>
                                    <li><b>
                                        <field name="date_availability"/>
                                    </b></li>
                                </ul>
                                
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record model="ir.ui.view" id="test_calendar_view">
        <field name="name">estate.property.calendar</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <calendar date_start="create_date" mode="day">
                <field name="name"/>
                <field name="living_area"/>
                <field name="selling_price"/>
            </calendar>
        </field>
    </record>
    <record model="ir.ui.view" id="test_graph_view">
        <field name="name">estate.property.graph</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <graph>
                <field name="name"/>
                <field name="living_area"/>
            </graph>
        </field>
    </record>
    <record model="ir.ui.view" id="view_patient_pivot">
        <field name="name">estate.property.pivot</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="name"/>
            </pivot>
        </field>
    </record>
        <record id="view_patient_activity" model="ir.ui.view">
            <field name="name">estate.property.activity</field>
            <field name="model">test.model</field>
            <field name="arch" type="xml">
                <activity string="estate detail">
                    <templates>
                        <div t-name="activity-box">
                            <div>
                                <field name="name" display="full"/>
                            </div>
                        </div>
                    </templates>
                </activity>
            </field>
        </record>
    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">test.model</field>
        <field name="view_mode">tree,kanban,form,calendar,graph,pivot,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property!
            </p>
        </field>
    </record>

    <menuitem id = "estate_root"
              name = "Estate"
              sequence = "10"/>

    <menuitem id = "advertisements_root"
              name = "Advertisements"
              parent = "estate_root"
              sequence = "10"/>

    <menuitem id = "properties_root"
              name = "Properties"
              action = "test_model_action"
              parent = "advertisements_root"
              sequence = "10"/>
              

</odoo>
